
<h1>All Tags</h1>

<ul id="tags">
	<% @tags.each do |tag| %>
		<li>
			<%= link_to tag.name, tag_path(tag), 
			class: 'tag_name', id: "tag_#{tag.id}" %>
			<%= link_to "Delete tag", tag_path(tag), method: :delete, data: {confirm: "Delete the tag?"} %>
		</li>
	<% end %>
</ul>

<%= link_to "Show articles", articles_path, class: "show_articles" %>